
extends ../layouts/topLevel.jade

block topLevelPreview
    if meta.displayList
        div.row
            div.col-md-12.text-center
            div#design

block topLevelPropertyTable

    
    if meta.subject
        tr
            td 
                | Subject
                a(href='http://sbolstandard.org/v2#subject',title='Learn more about subjects') 
                    span.fa.fa-info-circle
            td
                a(href=meta.subject.url) #{meta.subject.name}
                br
    tr
        td 
            | Restriction
            a(href='http://sbolstandard.org/v2#restriction',title='Learn more about restriction types') 
                span.fa.fa-info-circle
        td
            != meta.restriction.id
            a(href=meta.restriction.url,title='Learn more about this restriction type') 
                span.fa.fa-info-circle
            br
    if meta.object
        tr
            td 
                | Object
                a(href='http://sbolstandard.org/v2#object',title='Learn more about objects') 
                    span.fa.fa-info-circle
            td
                a(href=meta.object.url) #{meta.object.name}
                br
