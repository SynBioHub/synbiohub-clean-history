
mixin mutable-description(heading, src, desc)
    div#sbh-description(data-src=src)
        if (desc == '') 
            h4
                a#sbh-add-description(href='#')
                    span.fa.fa-plus
                    i  Add description...
        else
            div.row
                div.pull-left
                    a(href='#')
                        span.fa.fa-pencil#sbh-edit-description
                | <h2>!{heading}</h2>
                | !{desc}
                br

