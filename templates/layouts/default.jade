
extends base.jade

block body

    body

        nav.navbar.navbar-fixed-top
            div.content
                a(href='/')
                    div.pull-left.sbol-logo-dark-single-line

                if section != 'search'
                    div.pull-left
                        form(action='search').top-search-form
                            input.sbh-autocomplete(type='text',name='q',placeholder='Search SynBioHub' value=(searchQuery || ''))
                            button(type='submit').submit Search

                div.pull-right.menu
                    ul
                        li
                            a(href='/submit')
                                span.fa.fa-cloud-upload
                                span.blue-text  Submit
                        li
                            a(href='/about')
                                span.fa.fa-align-left
                                span.blue-text  About

                        if locals.user
                            li
                                a(href='/manage')
                                    span.fa.fa-cogs
                                    span.blue-text  Manage Submissions
                            if locals.user.isAdmin
                                a(href='/admin')
                                    span.fa.fa-cogs
                                    span.blue-text  Admin
                            li
                                a(href='/logout')
                                    span.fa.fa-power-off
                        else
                            li
                                a(href='/login')
                                    span.fa.fa-lock
                                    span.blue-text  Login or Register


        div.clearfix

        block intro

        div.sbol-breadcrumbs
            block breadcrumbs

        block content

        div.clearfix

        div(align='center').footer-bar.home-page-footer.blue-text.grey-page-mark
            p To report any issues, or request new features, please use the #[a(href='https://github.com/ICO2S/synbiohub/issues') issue tracker].
