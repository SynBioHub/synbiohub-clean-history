
extends base.jade

include ../mixins/footer.jade

block body

    body

        nav.navbar.navbar-fixed-top
            div.content
                a(href='/')
                    img.pull-left.sbol-logo-dark-single-line(src=config.instanceLogo)

                if section != 'search'
                    div.pull-left
                        form(action='search').top-search-form
                            input.sbh-autocomplete(type='text',name='q',placeholder='Search SynBioHub' value=(searchQuery || ''))
                            button(type='submit').submit Search

                div.pull-right.menu
                    ul
                        li
                            a(href='/submit')
                                span.fa.fa-cloud-upload
                                span.blue-text  Submit
                        li
                            a(href='/about')
                                span.fa.fa-info-circle
                                span.blue-text  About

                        if locals.user
                            li
                                a(href='/manage')
                                    span.fa.fa-align-left
                                    span.blue-text  Submissions
                            if config.experimental.dataIntegration
                                li
                                    a(href='/jobs')
                                        span.fa.fa-tasks
                                        span.blue-text  Jobs
                            if locals.user.isAdmin
                                li
                                    a(href='/admin')
                                        span.fa.fa-cogs
                                        span.blue-text  Admin
                            li
                                a(href='/logout')
                                    span.fa.fa-power-off
                        else
                            li
                                a(href='/login')
                                    span.fa.fa-lock
                                    span.blue-text  Login or Register


        div.clearfix

        block intro

        div.sbol-breadcrumbs
            block breadcrumbs

        block content

        div.clearfix

        div(align='center').footer-bar.home-page-footer.blue-text.grey-page-mark
            +footer()



