
extends ./default.jade

block breadcrumbs
    ul
        li
            span.fa.fa-cogs
            |  Admin

block content

        div(style='overflow: hidden; display: none;').vert
        div.sbh-admin-navigation
            ul.nav.nav-pills.nav-stacked
                li(role='presentation',class=(adminSection==='status'?'active':''))
                    a(href='/admin/') Status
                li(role='presentation',class=(adminSection==='users'?'active':''))
                    a(href='/admin/users') Users
                if config.experimental.dataIntegration
                    li(role='presentation',class=(adminSection==='jobs'?'active':''))
                        a(href='/admin/jobs') Jobs
                li(role='presentation',class=(adminSection==='graphs'?'active':''))
                    a(href='/admin/graphs') Graphs
                li(role='presentation',class=(adminSection==='sparql'?'active':''))
                    a(href='/admin/sparql') SPARQL
                li(role='presentation',class=(adminSection==='caches'?'active':''))
                    a(href='/admin/caches') Caches
                if config.experimental.dataIntegration
                    li(role='presentation',class=(adminSection==='integrations'?'active':''))
                        a(href='/admin/integrations') Integrations
                li(role='presentation',class=(adminSection==='export'?'active':''))
                    a(href='/admin/export') Export
                li(role='presentation',class=(adminSection==='update'?'active':''))
                    a(href='/admin/update') Update 
        div.sbh-admin-content
            block adminContent

